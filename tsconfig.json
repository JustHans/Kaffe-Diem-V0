{
  "compilerOptions": {
    "target": "ES6", // Set the target ECMAScript version
    "module": "commonjs", // Use commonjs module system
    "outDir": "./dist", // Output directory for compiled JavaScript files
    "rootDir": "./src", // Root directory of the TypeScript source files
    "strict": true, // Enable strict type checking
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "node_modules/@types/ws/ws.d.ts"], // Include all TypeScript files in the src folder
  "exclude": ["node_modules"] // Exclude node_modules folder
}